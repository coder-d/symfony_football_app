{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Add a New Player</h1>

        {{ form_start(form) }}
            <div class="form-group">
                <label for="{{ form.name.vars.id }}">Name</label>
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                {% if form.name.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="{{ form.surname.vars.id }}">Surname</label>
                {{ form_widget(form.surname, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                {% if form.surname.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.surname) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="{{ form.team.vars.id }}">Team</label>
                {{ form_widget(form.team, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                {% if form.team.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.team) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}